<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
 <p><%= flash[:notice] %></p>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

	<%= f.label :Title %><br/>
	<%= f.text_field :title %>

	<br><%= f.label :Body %><br/>
	<%= f.text_area :body %>

	<br><%= f.submit 'Update Book' %></br>
	 <%= link_to "show", book_path(@book.id) %>
  |
  <%= link_to "back", "/books" %>

<% end %>
